<Window x:Class="TomatoAlarm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TomatoAlarm"
        mc:Ignorable="d"
        Title="MainWindow" Height="120" Width="300" 
        Closing="onclosing" 
        AllowsTransparency="True" WindowStyle="None"
        Background="Transparent">
    <DockPanel>
        <TextBlock Text="{Binding TimeLeft}" TextAlignment="Center" VerticalAlignment="Center" FontSize="60"></TextBlock> 
    </DockPanel>
</Window>
